#!/usr/bin/env bash

help() {
    echo "Usage: $0 create app_name"
    echo "       $0 run"
    echo "actions:"
    echo "  create <app_name> create a new application"
    echo "  run     run server"
}

action=$1; shift
case $action in
    help) help; exit 0;;

    create)
        [[ -z "$1" ]] && echo "Missing application name" && help && exit 1;
        app_name=$1; shift;;

    run);;

    *)
        echo "Unknown option: $1"
        help
        exit 1
esac 

create_app() {
    if [[ -e "$app_name" ]]; then
        echo "Can't create directory '$app_name'"; exit 1; fi

    mkdir -p "$app_name"
    cd "$app_name"
    mkdir loaders views spec
    cat > app.lua <<EOF
local app = require'lmwf.Application'('$app_name')
app:GET('/', "Welcome to $app_name !")

return app
EOF

    cat > lmwf.conf <<EOF
{
    host = 'localhost',
    port = 8080,
    app = 'app',
    views = 'views',
    loaders = 'loaders',
}
EOF
}

run_server() {
    lemwaf_ctl $@
}

case $action in
    create) create_app;;
    run) run_server;;
esac
